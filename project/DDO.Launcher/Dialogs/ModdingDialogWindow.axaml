<Window
    x:Class="DDO.Launcher.Dialogs.ModdingDialogWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DDO.Launcher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ModdingDialogWindow"
    Width="420"
    Height="122"
    MinWidth="419"
    MinHeight="121"
    MaxWidth="421"
    MaxHeight="123"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="local:Dialogs.ModdingDialogWindow"
    ExtendClientAreaToDecorationsHint="True"
    FontFamily="{StaticResource DefaultFont}"
    Topmost="True"
    TransparencyLevelHint="AcrylicBlur"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    MaterialOpacity="0.65"
                    TintColor="Black"
                    TintOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <StackPanel>
            <TextBlock
                Name="TitleTextBlock"
                Margin="8,8,8,4"
                FontSize="24"
                FontWeight="SemiBold"
                Text="TITLE_PLACEHOLDER" />
            <TextBox
                Grid.Row="5"
                Margin="8,0,8,4"
                Text="{Binding Game, Mode=TwoWay}"
                Watermark="Game" />
            <Button
                Name="DeployButton"
                Grid.Row="6"
                Margin="8,0,8,4"
                HorizontalAlignment="Stretch"
                Click="DeployButton_Click"
                Content="Deploy" />
        </StackPanel>
        <Border
            Height="46"
            VerticalAlignment="Bottom"
            Background="#FF1A1A1A">
            <Grid Margin="8,0,8,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Button
                    Name="ConfirmButton"
                    Grid.Column="0"
                    Margin="0,0,2,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Content="Confirm" />
                <Button
                    Name="CancelButton"
                    Grid.Column="1"
                    Margin="2,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Content="Cancel" />
            </Grid>
        </Border>
    </Panel>
</Window>