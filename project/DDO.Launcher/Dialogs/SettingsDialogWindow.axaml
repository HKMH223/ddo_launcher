<Window
    x:Class="DDO.Launcher.Dialogs.SettingsDialogWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DDO.Launcher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsDialogWindow"
    Width="420"
    Height="382"
    MinWidth="419"
    MinHeight="381"
    MaxWidth="421"
    MaxHeight="383"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="local:Dialogs.SettingsDialogWindow"
    ExtendClientAreaToDecorationsHint="True"
    FontFamily="{StaticResource DefaultFont}"
    Topmost="True"
    TransparencyLevelHint="AcrylicBlur"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    MaterialOpacity="0.65"
                    TintColor="Black"
                    TintOpacity="0.65" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <StackPanel>
            <TextBlock
                Name="TitleTextBlock"
                Margin="8,8,8,4"
                FontSize="24"
                FontWeight="SemiBold"
                Text="TITLE_PLACEHOLDER" />
            <TextBox
                Margin="8,0,8,4"
                Text="{Binding Executable, Mode=TwoWay}"
                Watermark="Executable" />
            <TextBox
                Margin="8,0,8,4"
                Text="{Binding AccountAPI, Mode=TwoWay}"
                Watermark="AccountAPI" />
            <TextBox
                Margin="8,0,8,4"
                Text="{Binding DownloadIP, Mode=TwoWay}"
                Watermark="DownloadIP" />
            <TextBox
                Margin="8,0,8,4"
                Text="{Binding DownloadPort, Mode=TwoWay}"
                Watermark="DownloadPort" />
            <TextBox
                Margin="8,0,8,4"
                Text="{Binding LobbyIP, Mode=TwoWay}"
                Watermark="LobbyIP" />
            <TextBox
                Margin="8,0,8,4"
                Text="{Binding LobbyPort, Mode=TwoWay}"
                Watermark="LobbyPort" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    Grid.Column="0"
                    Margin="8,0,2,4"
                    Content="Require Admin"
                    IsChecked="{Binding RequireAdmin, Mode=TwoWay}" />
                <CheckBox
                    Grid.Column="1"
                    Margin="2,0,8,4"
                    Content="Local Mode"
                    IsChecked="{Binding LocalMode, Mode=TwoWay}" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button
                    Name="HashWrite"
                    Grid.Column="0"
                    Margin="8,0,2,4"
                    HorizontalAlignment="Stretch"
                    Click="HashWrite_Click"
                    Content="Write Hashes" />
                <Button
                    Name="HashVerify"
                    Grid.Column="1"
                    Margin="2,0,8,4"
                    HorizontalAlignment="Stretch"
                    Click="HashVerify_Click"
                    Content="Verify Hashes" />
            </Grid>
            <Button
                Name="SaveButton"
                Margin="8,0,8,4"
                HorizontalAlignment="Stretch"
                Click="SaveButton_Click"
                Content="Save" />
        </StackPanel>
        <Border
            Height="46"
            VerticalAlignment="Bottom"
            Background="#FF1A1A1A">
            <Grid Margin="8,0,8,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Button
                    Name="ConfirmButton"
                    Grid.Column="0"
                    Margin="0,0,2,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Content="Confirm" />
                <Button
                    Name="CancelButton"
                    Grid.Column="1"
                    Margin="2,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Content="Cancel" />
            </Grid>
        </Border>
    </Panel>
</Window>