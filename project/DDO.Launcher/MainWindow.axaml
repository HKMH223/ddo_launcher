<UserControl
    x:Class="DDO.Launcher.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:DDO.Launcher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DDO.Launcher"
    Width="550"
    Height="450"
    MinWidth="549"
    MinHeight="449"
    MaxWidth="551"
    MaxHeight="451"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="local:MainWindow"
    CanResize="False"
    ExtendClientAreaToDecorationsHint="True"
    FontFamily="{StaticResource DefaultFont}"
    TransparencyLevelHint="AcrylicBlur"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <DockPanel>
        <Border
            Height="40"
            Background="#FF1A1A1A"
            DockPanel.Dock="Bottom">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="Version"
                    Name="Version"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Initialized="Version_Initialized"
                    Text="VERSION_PLACEHOLDER" />
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="© 2025 HK223" />
            </Grid>
        </Border>
        <Panel>
            <ExperimentalAcrylicBorder IsHitTestVisible="False">
                <ExperimentalAcrylicBorder.Material>
                    <ExperimentalAcrylicMaterial
                        BackgroundSource="Digger"
                        MaterialOpacity="0.65"
                        TintColor="Black"
                        TintOpacity="0.65" />
                </ExperimentalAcrylicBorder.Material>
            </ExperimentalAcrylicBorder>
            <Grid Margin="42">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="avares://DDO.Launcher/Assets/Images/Logo.png" />
                <TextBox
                    Grid.Row="1"
                    Margin="0,0,0,4"
                    Initialized="UsernameTextBox_Initialized"
                    Text="{Binding Username, Mode=TwoWay}"
                    Watermark="Username" />
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Margin="0,4,4,0"
                        Classes="revealPasswordButton"
                        PasswordChar="*"
                        Text="{Binding Password, Mode=TwoWay}"
                        Watermark="Password" />
                    <CheckBox
                        x:Name="RememberMeCheckBox"
                        Name="RememberMeCheckBox"
                        Grid.Column="1"
                        Margin="0,4,0,0"
                        Content="Remember Me"
                        IsChecked="{Binding Remember, Mode=TwoWay}"
                        Unchecked="RememberMe_Unchecked" />
                </Grid>
                <Grid Grid.Row="3" Margin="0,4,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="52" />
                        <ColumnDefinition Width="52" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Button
                        x:Name="ModdingButton"
                        Name="ModdingButton"
                        Grid.Column="0"
                        Height="45"
                        Margin="0,4,4,4"
                        HorizontalAlignment="Stretch"
                        Click="ModdingButton_Click"
                        FontFamily="{StaticResource Icons}"
                        FontSize="18"
                        FontWeight="Regular">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="&#xE2A0;" />
                    </Button>
                    <Button
                        x:Name="SettingsButton"
                        Name="SettingsButton"
                        Grid.Column="1"
                        Height="45"
                        Margin="0,4,4,4"
                        HorizontalAlignment="Stretch"
                        Click="SettingsButton_Click"
                        FontFamily="{StaticResource Icons}"
                        FontSize="18"
                        FontWeight="Regular">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Text="&#xE270;" />
                    </Button>
                    <Button
                        x:Name="RegisterButton"
                        Name="RegisterButton"
                        Grid.Column="2"
                        Height="45"
                        Margin="0,4,4,4"
                        Padding="16,13,16,12"
                        HorizontalAlignment="Stretch"
                        Click="RegisterButton_Click"
                        Content="Register"
                        FontSize="14" />
                    <Button
                        x:Name="LoginButton"
                        Name="LoginButton"
                        Grid.Column="3"
                        Height="45"
                        Margin="0,4,0,4"
                        Padding="16,13,16,12"
                        HorizontalAlignment="Stretch"
                        Click="LoginButton_Click"
                        Content="Login"
                        FontSize="14" />
                </Grid>
            </Grid>
        </Panel>
    </DockPanel>
</UserControl>
